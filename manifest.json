{
    "description" : "Hub for storing links to all your favourite movies",
    "name" : "My favs",
    "version" : "1.0",
    "manifest_version" : 3,
    "icons" : {
        "16" : "images/icon.jpg"
    },
    "action" : {
        "default_popup" : "index.html",
        "default_title" : "Favorite movies"
    },
    "background" : {
        "service_worker" : "background.js"
    },
    "permissions" : [
        "activeTab",
        "contextMenus"
    ],
    "content_scripts" : [{
        "js" : ["scripts/content.js"],
        "matches" : ["<all_urls>"]
    }]
}